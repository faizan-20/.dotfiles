 * {
  background-color: #282C33;
  border-color: #2e343f;
  text-color: #8ca0aa;
  spacing: 0;
  background-color: transparent;
  width: 512px;

  font: "SF Pro 14";
}

inputbar {
  border: 0 0 20px 0;
  children: [prompt,entry];
}

window{
	transparency: "real";
	fullscreen: true;
	background-color: #282C33DD;
	}

prompt {
  padding: 16px;
  border: 0 1px 0 0;
}

mainbox {
	padding: 30% 30%;
	}

textbox {
  background-color: #2e343f;
  border: 0 0 1px 0;
  border-color: #282C33;
  padding: 8px 16px;
}

entry {
  padding: 16px;
}

listview {
  cycle: true;
  margin: 0 0 -1px 0;
  scrollbar: false;
}

element {
  border: 0 0 1px 0;
  padding: 16px;
}

element selected {
  background-color: #2e343f;
}

