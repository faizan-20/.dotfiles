client.focused          $bg-color           $bg-color          $text-color          #202026
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #202026
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #202026
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #202026

#hide borders
hide_edge_borders none

bindsym $mod+r mode "resize"

